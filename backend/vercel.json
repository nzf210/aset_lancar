{
    "version": 2,
    "builds": [
        {
            "src": "main/main/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/Assets/(.*)",
            "dest": "/Assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "main/main/wsgi.py"
        }
    ]
}