{
    "version": 2,
    "builds": [
        {
            "src": "main/**",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/main/static/(.*)",
            "dest": "main/static/$1"
        },
        {
            "src": "/main/(.*)",
            "dest": "main/main/wsgi.py"
        }
    ]
}